{% extends '@notes/layout.html.twig' %}

{% block title %}Log in{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('bundles/notes/css/login.css') }}">
{% endblock %}

{% block body %}
    <hgroup>
        <h1>XZNOTES</h1>
        <h3>Inspire your mind</h3>
    </hgroup>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="group" flex>
            <md-input-container class="loginInput" flex>
                <label>Username</label>
                <input id="username" name="_username" required value="{{ last_username }}">
            </md-input-container>
        </div>
        <div class="group">
            <md-input-container class="loginInput" flex>
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" required="required">
            </md-input-container>
        </div>
        <md-checkbox for="remember_me" aria-label="Remember me">Remember me</md-checkbox>
        <md-button class="md-raised md-primary" type="submit" id="_submit" name="_submit">Log in</md-button>
    </form>
{% endblock %}